{
  "name": "hubspot-ignisign-integration",
  "description": "HubSpot CRM Integration with Ignisign Digital Signature",
  "license": "Apache-2.0",
  "devDependencies": {
    "@hubspot/cli": "latest",
    "@hubspot/prettier-plugin-hubl": "latest",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.10",
    "prettier": "^2.7.1",
    "typescript": "^4.9.0",
    "yarpm": "^1.2.0"
  },
  "dependencies": {
    "@hubspot/ui-extensions": "latest",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-reconciler": "^0.29.0",
    "styled-components": "^5.3.5"
  },
  "scripts": {
    "start": "cd ignisign-integration/ignisign-app && yarpm start",
    "postinstall": "cd ignisign-integration/ignisign-app && yarpm install",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier . --check",
    "watch:hubl": "hs watch ignisign-theme ignisign-theme",
    "upload:hubl": "hs upload ignisign-theme ignisign-theme",
    "deploy": "hs project upload",
    "build": "tsc --noEmit"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
